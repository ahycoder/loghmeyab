<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraintLayout"
  android:layout_width="match_parent"
  android:layout_height="220dip"
  android:background="@drawable/background_drawer_header"
  android:orientation="vertical"
  tools:ignore="MissingConstraints">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="0.1"
    android:orientation="vertical"></LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="0.75"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="0dip"
      android:layout_height="wrap_content"
      android:layout_weight="0.7"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/imageView15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp"
          tools:ignore="VectorDrawableCompat" />

        <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="احمد یوسفی"
          android:textColor="@android:color/background_light" />

        <ImageView
          android:id="@+id/imageView16"
          android:layout_width="24dip"
          android:layout_height="24dip"
          app:srcCompat="@drawable/ic_person_white24dp"
          tools:ignore="VectorDrawableCompat" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/textView25"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:text="09375479301"
          android:textColor="@android:color/background_light" />

        <ImageView
          android:id="@+id/imageView146"
          android:layout_width="24dip"
          android:layout_height="24dip"
          app:srcCompat="@drawable/ic_phone_android_white_24dp"
          tools:ignore="VectorDrawableCompat" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/imageView151"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp"
          tools:ignore="VectorDrawableCompat" />

        <TextView
          android:id="@+id/textView15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="باشگاه صفر امتیاز"
          android:textColor="@android:color/background_light" />

        <ImageView
          android:id="@+id/imageView116"
          android:layout_width="24dip"
          android:layout_height="24dip"
          app:srcCompat="@drawable/ic_card_giftcard_white_24dp"
          tools:ignore="VectorDrawableCompat" />
      </LinearLayout>

    </LinearLayout>

    <ImageView
      android:id="@+id/imageView2"
      android:layout_width="0dip"
      android:layout_height="wrap_content"
      android:layout_weight="0.3"
      app:srcCompat="@drawable/ic_person_white24dp" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="0.15"
    android:gravity="center"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
      android:id="@+id/imgarrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp"
      tools:ignore="VectorDrawableCompat" />

    <TextView
      android:id="@+id/textView9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="صفر تومان"
      android:textColor="@android:color/background_light" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal"></LinearLayout>

    <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="احمد یوسفی"
      android:textColor="@android:color/background_light" />

    <ImageView
      android:id="@+id/imgwallet"
      android:layout_width="24dip"
      android:layout_height="24dip"
      app:srcCompat="@drawable/ic_person_white24dp"
      tools:ignore="VectorDrawableCompat" />

  </LinearLayout>


</LinearLayout>
