<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cardViewItemPlace"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dip">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/imgItemFoodDesc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:tint="@color/colorGreen"
      app:layout_constraintBottom_toBottomOf="@+id/imgItemFood"
      app:layout_constraintEnd_toStartOf="@+id/imgItemFood"
      app:layout_constraintTop_toBottomOf="@+id/imgItemFoodForkSpon"
      app:layout_constraintVertical_bias="0.20999998"
      app:srcCompat="@drawable/ic_menu_white_24dp"
      tools:ignore="VectorDrawableCompat" />

    <ImageView
      android:id="@+id/imgItemFood"
      android:layout_width="96dip"
      android:layout_height="96dip"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/back_item_food" />

    <ImageView
      android:id="@+id/imgItemFoodForkSpon"
      android:layout_width="24dip"
      android:layout_height="24dip"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:tint="@color/colorPrimary"
      app:layout_constraintEnd_toStartOf="@+id/imgItemFood"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_fork_spoon"
      tools:ignore="VectorDrawableCompat" />

    <TextView
      android:id="@+id/txtItemFoodName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="TextView"
      android:textColor="@color/colorBlack"
      app:layout_constraintBottom_toBottomOf="@+id/imgItemFoodForkSpon"
      app:layout_constraintEnd_toStartOf="@+id/imgItemFoodForkSpon"
      app:layout_constraintHorizontal_bias="0.9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imgItemFoodForkSpon" />

    <TextView
      android:id="@+id/txtItemFoodDesc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="TextView"
      app:layout_constraintBottom_toBottomOf="@+id/imgItemFoodDesc"
      app:layout_constraintEnd_toStartOf="@+id/imgItemFoodDesc"
      app:layout_constraintHorizontal_bias="0.9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imgItemFoodDesc" />

    <TextView
      android:id="@+id/txtItemFoodPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/bg_green_rounded"
      android:text="8000 تومان"
      android:textColor="@color/colorWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/imgItemFood"
      app:layout_constraintStart_toStartOf="@+id/imgItemFood"
      app:layout_constraintTop_toBottomOf="@+id/imgItemFood" />

    <TextView
      android:id="@+id/txtItemFoodClosed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginLeft="24dp"
      android:layout_marginBottom="8dp"
      android:background="@drawable/bg_red_rounded"
      android:text="تعطیل است"
      android:textColor="@color/colorWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <utility.Stepper
      android:id="@+id/stepperItemFood"
      android:layout_width="96dip"
      android:layout_height="24dip"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/txtItemFoodPrice"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.9" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>