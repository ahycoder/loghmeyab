<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imgSweet"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dip"
          android:layout_weight="1"
          android:tag="3"
          app:srcCompat="@drawable/ghanadi" />

        <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="شیرینی" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imgBreakfast"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dip"
          android:layout_weight="1"
          android:tag="5"
          app:srcCompat="@drawable/sobhane" />

        <TextView
          android:id="@+id/textView2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="صبحانه" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imgFastfood"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dip"
          android:layout_weight="1"
          android:tag="2"
          app:srcCompat="@drawable/fastfood" />

        <TextView
          android:id="@+id/textView3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="فست فود" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imgCafe"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dip"
          android:layout_weight="1"
          android:tag="4"
          app:srcCompat="@drawable/cafe" />

        <TextView
          android:id="@+id/textView4"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="کافه" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imgRestaurant"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dip"
          android:layout_weight="1"
          android:tag="1"
          app:srcCompat="@drawable/restouran" />

        <TextView
          android:id="@+id/textView6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:text="رستوران" />
      </LinearLayout>

    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="تنوع غذایی"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorGreen"
        app:srcCompat="@drawable/ic_select_all_white_24dp"
        tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerMainTypesFood"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="پیشنهاد این لحظه لقمه یاب"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorGreen"
        app:srcCompat="@drawable/ic_select_all_white_24dp"
        tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerMainPlacesOffer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

    </androidx.recyclerview.widget.RecyclerView>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="درحال پیشرفت"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorGreen"
        app:srcCompat="@drawable/ic_select_all_white_24dp"
        tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerMainPlacesProgressSuccessful"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="جدیدترین های لقمه یاب"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorGreen"
        app:srcCompat="@drawable/ic_select_all_white_24dp"
        tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerMainPlacesNew"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="تخفیف دارها"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorGreen"
        app:srcCompat="@drawable/ic_select_all_white_24dp"
        tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerMainPlacesOff"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
  </LinearLayout>

</LinearLayout>